@model LoginViewModel

@using (Html.BeginForm())
{
    <input class="form-control" asp-for="username" name="username" placeholder="Gebruikersnaam" style="text-align: center;width: 250px;" />
    <input class="form-control" asp-for="password" name="password" placeholder="Paswoord" style="text-align: center;width: 250px; margin-top: 5px" type="password" />
    <input type="submit" value="Log in" class="btn btn-primary" style="margin-top: 5px"/>

}

